-- !!.stdlib
-- !!.warn_redef "redefinition may break stdlib"

-- imports
-- #std::str::Str => _Str

-- types

-- File = { filepath: Str }.

-- IOMode = [ read write append read_write ].

-- files

-- standard output
stdout: File.
@stdout = #_som_std_io_stdout.

-- standard error
stderr: File.
@stderr = #_som_std_io_stderr.

-- standard input
stdin: File.
@stdin = #_som_std_io_stdin.

-- functions

-- opens the file with the given path and mode
openf: Str -> IOMode -> File.
@openf path mode = #_som_std_io_openf path mode.

-- closes the given file
closef: File -> !.
@closef file = #_som_std_io_closef file.

-- writes the given string to the given file
putsf: File -> _Str -> !.
@putsf file string = #_som_std_io_putsf file string.

-- prints the given string to stdout
puts: _Str -> !.
@puts string = putsf stdout string.
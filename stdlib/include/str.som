-- !!.stdlib
!!.warn_redef "redefinition may break stdlib"

#std/list::List => _List

Str := $i.u.8 Array.

!!fmt_variadic 0
fmt: Str ... -> Str.
@fmt f args = ....

show[V]: V -> Str.

@show[Str] v = v.
@show[Bln] v = v ? "true" : "false".
@show[Int] v = ....
-- etc...

-- idk abt this one
-- cast['a, Str] v = show v.

join: Str -> Str _List -> Str
@join sep l = l ??
  empty -> "",
  cons (lh; empty) -> lh,
  cons (lh; lr) -> lh + sep + join sep lr.